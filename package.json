{
  "name": "desktop-gr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public-electron/main.js",
  "author": {
    "name": "Leandro Rinaudo",
    "email": "lrrinaudo@gmail.com"
  },
  "homepage": "https://github.com/lrrinaudo/desktop-gr",
  "build": {
    "appId": "com.desktop-gr.id",
    "productName": "Desktop-",
    "files": [
      "dist/**/*",
      "public-electron/**/*",
      "node_modules/**/*",
      "package.json",
      "src/preload.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/diabetes256.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/assets/diabetes.png"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "tsc -p .",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "start": "npm run build && electron .",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@diakem/libre-link-up-api-client": "^0.7.2",
    "electron-store": "^10.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-spinners": "^0.17.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}